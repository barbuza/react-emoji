{
  "name": "react-emoji-ng",
  "version": "0.5.0",
  "description": "An emoji component for React",
  "main": "lib/react-emoji.js",
  "typings": "lib/react-emoji.d.ts",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "rimraf lib && tsc -p tsconfig.prod.json",
    "test": "jest --coverage",
    "prepublishOnly": "npm test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/barbuza/react-emoji-ng.git"
  },
  "keywords": [
    "react",
    "emoji",
    "react-component"
  ],
  "author": "Kohei Hasegawa",
  "contributors": [
    {
      "name": "Victor Kotseruba",
      "url": "https://github.com/barbuza",
      "email": "barbuzaster@gmail.com"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/barbuza/react-emoji-ng/issues"
  },
  "homepage": "https://github.com/barbuza/react-emoji-ng",
  "devDependencies": {
    "@types/jest": "^20.0.2",
    "@types/react-dom": "^15.5.1",
    "coveralls": "^2.11.2",
    "jest": "^20.0.4",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "rimraf": "^2.6.1",
    "ts-jest": "^20.0.6",
    "tslint": "^5.4.3",
    "typescript": "^2.4.0"
  },
  "peerDependencies": {
    "react": "^15.0.0"
  },
  "dependencies": {
    "@types/react": "^15.0.0",
    "emoji-annotation-to-unicode": "^0.3.0",
    "emoji-emoticon-to-unicode": "^0.2.2",
    "escape-string-regexp": "^1.0.3"
  },
  "files": [
    "package.json",
    "lib/react-emoji.js",
    "lib/react-emoji.d.ts",
    "lib/react-emoji.js.map",
    "extra/symbols.svg"
  ],
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "testRegex": "\\.spec\\.tsx$",
    "moduleFileExtensions": [
      "tsx",
      "js"
    ]
  }
}
